@page "/avatar"
<PageTitle>Avatar</PageTitle>

<Container Fluid="true">
    <h1>Avatar</h1>
    <Paragraph> The <code>@("<Avatar>")</code> can be used to represent people or objects.</Paragraph>
    <h2>Examples</h2>

    <h3>Basic</h3>
    <Card>
        <CardBody>
            
            <Avatar Src="images/logo.png"/>
            <Avatar Src="images/profile.jpg"/>
            <PrettyCode CodeFile="pages/avatar/basic.html" Theme="Material" />
        </CardBody>
    </Card>
    <br/>
    <h3>Size</h3>
    <Card>
        <CardBody>

            <Avatar Src="images/profile.jpg" Size="Size.ExtraSmall"/>
            <Avatar Src="images/profile.jpg" Size="Size.Small"/>
            <Avatar Src="images/profile.jpg" Size="Size.Default"/>
            <Avatar Src="images/profile.jpg" Size="Size.Medium"/>
            <Avatar Src="images/profile.jpg" Size="Size.Large"/>
            <Avatar Src="images/profile.jpg" Size="Size.ExtraLarge"/>

            <PrettyCode  CodeFile="pages/avatar/size.html" Theme="Material" />
        </CardBody>
    </Card>
    <br/>
</Container>

